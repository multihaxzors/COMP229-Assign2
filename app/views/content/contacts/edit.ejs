<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <input type="hidden" name="id" value="<%= contact._id %>" >
                <div class="form-group">
                    <label for="nameTextField">Contact's Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Contact's Name"
                    name="name" 
                    value="<%= contact.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Contact's Phone Number</label>
                    <input type="number" class="form-control"
                    id="numberTextField"
                    placeholder="Enter the Contact's Phone Number"
                    name="phonenumber" 
                    value="<%= contact.phonenumber %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Contact's Email</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the Contact's Email"
                    name="email" 
                    value="<%= contact.email %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/contact-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>