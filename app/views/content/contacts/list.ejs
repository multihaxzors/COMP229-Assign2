<div class="container">
    <h1>Buisness Contacts</h1>
    <% if(displayName) { %>
    <a href="/contact-add" class="btn btn-success" role="button">
        <i class="fas fa-plus-circle"></i> Add a Buisness Contact</a>
    <% } %>

    <div class="row">
        <div class="col">
            <!-- Create table -->
            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Phonenumber</th>
                        <th scope="col">Email</th>
                        <% if(displayName) { %>
                        <th></th>
                        <th></th>
                        <% } %>
                    </tr>
                </thead>
                <tbody id="contactList">
                    <!-- Loop for each row -->
                    <% for(let count = 0; count < contacts.length; count++) { %>
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td><%= contacts[count].name %></td>
                            <td><%= contacts[count].phonenumber %></td>
                            <td><%= contacts[count].email %></td>

                            <% if(displayName) { %>
                            
                            <td class="text-center col-1">
                                <a href="/contact-edit/<%= contacts[count]._id %>"
                                    class="btn btn-warning btn-sm">
                                    <i class="fas fa-pencil-alt"></i> Edit</a>
                            </td>
                            
                            <td class="text-center col-1">
                                <a href="/contact-delete/<%= contacts[count]._id %>"
                                    class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>

                            <% } %> 
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

